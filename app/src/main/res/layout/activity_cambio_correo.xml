<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CambioCorreo">

    <TextView
        android:id="@+id/cambioCorreo_correoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:text="@string/cambiocorreo_correolabel"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cambioCorreo_desc"
        android:layout_width="334dp"
        android:layout_height="58dp"
        android:layout_marginTop="172dp"
        android:text="@string/cambiocorreo_desc"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cambioCorreo_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/boring_sans_heavy"
        android:text="@string/cambiocorreo_titulo"
        android:textColor="#020202"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cambioCorreo_fondo2"
        android:layout_width="289dp"
        android:layout_height="96dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/menu_fondo"
        android:src="@drawable/menufondo"
        android:onClick="btnRegresarPerfil1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cambioCorreo_fondo"
        android:layout_width="225dp"
        android:layout_height="133dp"
        android:layout_marginStart="220dp"
        android:contentDescription="@string/menu_fondo"
        android:src="@drawable/fondofotouser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cambioCorreo_backbutton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/flecha_retroceso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cambioCorreo_correoText"
        android:layout_width="334dp"
        android:layout_height="57dp"
        android:layout_marginTop="288dp"
        android:ems="10"
        android:hint="@string/cambioCorreo_correoText"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#4E4E4E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cambioCorreo_cancelBtn"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:background="@drawable/btn"
        android:backgroundTint="#9E9C9C"
        android:fontFamily="@font/boring_sans_heavy"
        android:text="@string/cambiocorreo_cancelbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambioCorreo_correoText" />

    <Button
        android:id="@+id/cambioCorreo_aceptarBtn"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/boring_sans_heavy"
        android:text="@string/cambiocorreo_aceptarbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toEndOf="@+id/cambioCorreo_cancelBtn"
        app:layout_constraintTop_toBottomOf="@+id/cambioCorreo_correoText" />
</androidx.constraintlayout.widget.ConstraintLayout>