<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProblemaViaje"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnFlechaAtrasPerfil"
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/separacion_boton_regreso"
                    android:layout_marginTop="@dimen/separacion_boton_regreso"
                    android:contentDescription="@string/imagenes"
                    android:elevation="4dp"
                    android:onClick="btnRegresarayuda"
                    android:src="@drawable/flecha_retroceso"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <ImageView
                    android:id="@+id/img_cuadrado"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/separacion_img_cuadros_top"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/cuadros"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txtViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/boring_sans_heavy"
                android:text="@string/txtViaje"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:cursorVisible="true"
                android:fontFamily="@font/boring_sans_heavy"
                android:gravity="start|top"
                android:hint="@string/boxTitulo"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinnerViaje"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:gravity="start|top"
                android:hint="@string/boxDescripcion"
                android:inputType="textMultiLine"
                android:textStyle="bold"
                android:textColor="@color/black"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="60dp"
                    android:contentDescription="@string/imagenes"
                    android:src="@drawable/img_camara_tutum"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txt_frontal_ine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtAdjuntar"
                    android:textColor="@color/darkest"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="@+id/imageView3"
                    android:layout_marginBottom="10dp"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/btn_guardar_registro"
                android:layout_width="@dimen/width_boton"
                android:layout_height="@dimen/heigth_boton"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/boton_redondo"
                android:text="@string/btn_text_continuar"
                android:fontFamily="@font/boring_sans_bold"
                android:textSize="@dimen/size_text_btn"
                android:textColor="@color/white"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>