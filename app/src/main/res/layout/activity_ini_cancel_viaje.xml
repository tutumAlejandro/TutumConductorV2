<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ini_cancel_viaje"
    android:background="@color/white"
    android:forceDarkAllowed="false">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="842dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_pasajero"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/default_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/name_passenger_request"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/request_label_tst_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_pasajero"
                    app:layout_constraintStart_toEndOf="@+id/img_pasajero"
                    app:layout_constraintTop_toTopOf="@+id/img_pasajero"
                    app:layout_constraintVertical_bias="0.532" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/boring_sans_heavy"
                    android:text="@string/request_head"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/img_pasajero"
                    app:layout_constraintStart_toStartOf="@+id/img_pasajero"
                    app:layout_constraintTop_toBottomOf="@+id/img_pasajero" />
                <!-- despliegue de los datos del viaje -->

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="50dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="48dp"
                    android:src="@drawable/trip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />


                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/boring_sans_bold"
                    android:text="@string/request_label_origin"
                    android:textColor="@color/gray_2"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />

                <TextView
                    android:id="@+id/request_origin"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/request_label_tst_addr"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />


                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/request_label_destiny"
                    android:textColor="@color/gray_2"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    app:layout_constraintTop_toBottomOf="@+id/request_origin" />

                <TextView
                    android:id="@+id/request_detiny"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/request_label_tst_addr2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" />
                <!-- Datos del viaje precio, tiempo, distncia -->

                <TextView
                    android:id="@+id/label_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/request_label_price"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView8" />

                <TextView
                    android:id="@+id/label_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/request_label_time"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_price" />

                <TextView
                    android:id="@+id/label_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/request_label_distance"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_time" />

                <!-- Datos modificables del viaje -->

                <TextView
                    android:id="@+id/price_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="172dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/request_label_tst_price"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/label_price"
                    app:layout_constraintStart_toEndOf="@+id/label_price"
                    app:layout_constraintTop_toTopOf="@+id/label_price"
                    app:layout_constraintVertical_bias="0.476" />

                <TextView
                    android:id="@+id/time_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/request_label_tst_time"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/label_time"
                    app:layout_constraintStart_toEndOf="@+id/label_time"
                    app:layout_constraintTop_toTopOf="@+id/label_time"
                    app:layout_constraintVertical_bias="0.5" />

                <!-- Declaracion de los botones para la solicitud-->


                <TextView
                    android:id="@+id/distance_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="144dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/request_label_tst_distance"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/label_distance"
                    app:layout_constraintStart_toEndOf="@+id/label_distance"
                    app:layout_constraintTop_toTopOf="@+id/label_distance"
                    app:layout_constraintVertical_bias="0.5" />

                <Button
                    android:id="@+id/btn_cancel_request"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/boton_redondo_cancelar"
                    android:fontFamily="@font/boring_sans_heavy"
                    android:text="@string/request_btn_label_no"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_distance" />

                <Button
                    android:id="@+id/btn_confirm_request"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/boton_redondo"
                    android:fontFamily="@font/boring_sans_heavy"
                    android:text="@string/request_btn_label_yes"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_cancel_request"
                    app:layout_constraintStart_toEndOf="@+id/btn_cancel_request"
                    app:layout_constraintTop_toTopOf="@+id/btn_cancel_request"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>