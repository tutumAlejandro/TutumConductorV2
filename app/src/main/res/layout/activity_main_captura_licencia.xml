<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro.documentos_conductor.MainCapturaLicencia"
    android:orientation="vertical"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_retroceso_licencia"
                    android:layout_width="@dimen/width_img_retroceso"
                    android:layout_height="@dimen/heigth_img_retroceso"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:contentDescription="@string/todo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/flecha_retroceso" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/imagenes"
                    android:src="@drawable/cuadros"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txt1_licencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/txt_text1_licencia"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text_head_capture" />

            <TextView
                android:id="@+id/text2_licencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/txt_text2_licencia"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text_head2_capture" />

            <TextView
                android:id="@+id/text3_licencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/txt_text3_licencia"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text_body_capture" />

            <TextView
                android:id="@+id/text4_licencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/txt_text4_licencia"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text_body_capture" />

            <TextView
                android:id="@+id/text5_licencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/txt_text5_licencia"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text_body_capture" />

            <TextView
                android:id="@+id/text6_licencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/txt_text6_licencia"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text_body_capture" />

            <TextView
                android:id="@+id/text7_licencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="@string/txt_text7_licencia"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text_body_capture" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imagenes_licencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_frontal_licencia"
                    android:layout_width="@dimen/width_img_camera"
                    android:layout_height="@dimen/heigth_img_camara"
                    android:layout_marginStart="@dimen/margin_img_camara_border"
                    android:layout_marginTop="@dimen/margin_img_camra_top"
                    android:contentDescription="@string/imagenes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/img_camara_2" />

                <ImageView
                    android:id="@+id/btn_reverso_licencia"
                    android:layout_width="@dimen/width_img_camera"
                    android:layout_height="@dimen/heigth_img_camara"
                    android:layout_marginTop="@dimen/margin_img_camra_top"
                    android:layout_marginEnd="@dimen/margin_img_camara_border"
                    android:contentDescription="@string/imagenes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/img_camara_2" />

                <TextView
                    android:id="@+id/txt_frontal_licencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/img_txt_frontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_text_body_capture"
                    app:layout_constraintBottom_toTopOf="@+id/btn_frontal_licencia"
                    app:layout_constraintStart_toStartOf="@+id/btn_frontal_licencia" />

                <TextView
                    android:id="@+id/txt_reverso_licencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/img_txt_reverso"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_text_body_capture"
                    app:layout_constraintBottom_toTopOf="@+id/btn_reverso_licencia"
                    app:layout_constraintStart_toStartOf="@+id/btn_reverso_licencia" />


                <ImageView
                    android:id="@+id/icon_calendar_licencia"
                    android:layout_width="@dimen/width_heigth_icon_documents"
                    android:layout_height="@dimen/width_heigth_icon_documents"
                    android:layout_marginStart="20dp"

                    android:contentDescription="@string/imagenes"
                    android:src="@drawable/ic_baseline_edit_calendar_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/VigenciaLicencia" />

                <EditText
                    android:id="@+id/VigenciaLicencia"
                    android:layout_width="@dimen/width_input_date"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/input_vigencia"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black"
                    android:textColorLink="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon_calendar_licencia"
                    app:layout_constraintTop_toBottomOf="@+id/btn_frontal_licencia"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_guardar_licencia"
                android:layout_width="@dimen/width_boton"
                android:layout_height="@dimen/heigth_boton"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/boton_redondo"
                android:onClick="guarda_licencia"
                android:text="@string/btn_text_guardar"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_btn" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>