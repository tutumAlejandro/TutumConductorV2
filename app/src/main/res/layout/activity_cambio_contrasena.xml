<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CambioContrasena">

    <ImageView
        android:id="@+id/cambioContra_fondo"
        android:layout_width="225dp"
        android:layout_height="133dp"
        android:layout_marginStart="220dp"
        android:contentDescription="@string/menu_fondo"
        android:src="@drawable/fondofotouser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cambioContra_fondo2"
        android:layout_width="289dp"
        android:layout_height="96dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/menu_fondo"
        android:src="@drawable/menufondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cambioContra_backbutton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/arrow"
        android:backgroundTint="#FF9800"
        android:onClick="btnRegresarPerfil2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/cambioContra_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/boring_sans_heavy"
        android:text="@string/cambiocontra_titulo"
        android:textColor="#020202"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cambioContra_desc"
        android:layout_width="334dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:text="@string/cambiocontra_desc"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambioContra_titulo" />

    <EditText
        android:id="@+id/cambioContra_pswd"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:foregroundTint="#FF9800"
        android:hint="@string/cambioContra_contrasena"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHighlight="#CA8116"
        android:textColorHint="#8F8F8F"
        android:textColorLink="#FF9800"
        android:textCursorDrawable="?android:attr/textCursorDrawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambioContra_contraLabel" />

    <TextView
        android:id="@+id/cambioContra_contraLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/cambiocontra_contralabel"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cambioContra_desc" />

    <Button
        android:id="@+id/cambioContra_aceptarBtn"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/boring_sans_heavy"
        android:text="@string/cambiocontra_aceptarbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cambioContra_cancelBtn"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/btn"
        android:backgroundTint="#9E9C9C"
        android:fontFamily="@font/boring_sans_heavy"
        android:text="@string/cambiocontra_cancelbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>