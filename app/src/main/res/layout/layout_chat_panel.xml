<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >
    <ImageView
        android:id="@+id/imagen_fondo_msg"
        android:layout_width="@dimen/largo_input_nombres"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:scaleX="-1"
        android:src="@drawable/ic_baseline_mode_comment_24_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/res_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imagen_fondo_msg"
        app:layout_constraintStart_toStartOf="@+id/imagen_fondo_msg"
        app:layout_constraintTop_toTopOf="@+id/imagen_fondo_msg" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@+id/res_mensaje"
        app:layout_constraintTop_toBottomOf="@id/res_mensaje"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>